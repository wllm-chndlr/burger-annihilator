        {{!-- <a class="waves-effect waves-light btn grey darken-3" type="submit">
          Add Burger
        </a> --}}
        
        <button type="submit" class="center-align">Add Burger</button>

      </form>

    </div>

    <div class="col s1">
    </div>

    <div class="col s3">
      <img src='assets/img/burger2.png' />
    </div>

  </div>

  <div class="row" id="lists">

    <div class="col s6">
      <h3>Ready to annihilate!</h3>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col s6">
      <h3>Already devoured!</h3>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class="row" id="burger_row">
    <div class="col s3">
      <img src='assets/img/burger2.png' />
